{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "watchPatterns": ["service-engine-x-api/**"]
  },
  "deploy": {
    "startCommand": "cd service-engine-x-api && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "on_failure"
  }
}
